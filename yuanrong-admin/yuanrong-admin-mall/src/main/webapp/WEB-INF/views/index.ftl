                                    +'<p class="account-p2">粉丝数量</p>'
                                +'</li>'
                            +'</ul>'
                            +'<div class="item-con-wrap">'+sucSubDataC.introduction+'</div>'
                        +'</div>'
                    +'</a>'
                +'</li>';
            }
            htmlC += '<ul class="section-list-wrap section-account-list-wrap">'+htmlCSub+'</ul>';
        }
        return htmlC;
    }
    //投广告tab切换
    $('li', adTypeWrapDom).on('click', function() {
        var $this = $(this),
            dataID = $(this).data('id'),
            tradeMoreBtn = $('#js-more-trade');
        $this.addClass('active').siblings().removeClass('active');
        if(dataID == 0){
            indexWXListWrapDom.show();
            indexWBListWrapDom.hide();
            indexSVListWrapDom.hide();
            tradeMoreBtn.attr('href', '${request.contextPath}/ipTrade/ip_trade_distribution.html?adType=0');
        } else if(dataID == 1){
            indexWXListWrapDom.hide();
            indexWBListWrapDom.show();
            indexSVListWrapDom.hide();
            tradeMoreBtn.attr('href', '${request.contextPath}/ipTrade/ip_trade_distribution.html?adType=1');
        } else if(dataID == 2){
            indexWXListWrapDom.hide();
            indexWBListWrapDom.hide();
            indexSVListWrapDom.show();
            tradeMoreBtn.attr('href', '${request.contextPath}/ipTrade/ip_trade_distribution.html?adType=2');
        }
    })
    //创作者，账号交互效果
    function itemMouseHoverFun() {

        $('.item-li-author').mouseover(function(e){
            if(isMouseEnter == true){
                return;
            } else {
                var $this = $(this);
                e.stopPropagation();
                if($this.find('.section-bottom-wrap').hasClass('hide-item-1')){
                    $this.find('.section-bottom-wrap').removeClass('hide-item-1');
                    $this.siblings().find('.section-bottom-wrap').addClass('hide-item-1');
                }
                isMouseEnter = true;
            }
        }).mouseleave(function(){
            if(isMouseEnter == false){
                return;
            } else {
                var $this = $(this);
               // $('.item-li-author:even').find('.section-bottom-wrap').removeClass('hide-item-1');
               // $('.item-li-author:odd').find('.section-bottom-wrap').addClass('hide-item-1');
                isMouseEnter = false;
            }
            isMouseEnter = false;
        })
    }
