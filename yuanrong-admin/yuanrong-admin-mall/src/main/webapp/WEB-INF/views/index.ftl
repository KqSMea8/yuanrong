                                    +'<li class="style-blue">'+lableNameArr[1]+'</li>'
                                    +'<li class="style-green">'+lableNameArr[2]+'</li>'
                                    +'<li class="style-pink">'+lableNameArr[3]+'</li>'
                                    +'<li class="style-orange">'+lableNameArr[4]+'</li>'
                                +'</ul>'
                                +'<div class="item-con-wrap">'+sucSubData.Introduction+'</div>'
                            +'</div>'
                        +'</a>'
                    +'</li>';
