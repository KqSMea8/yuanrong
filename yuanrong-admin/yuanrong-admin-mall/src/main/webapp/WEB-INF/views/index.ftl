            itemMouseHoverFun();
        } else if(name == '_get_wb_list') {
            var wxArr = {'data':{'staticWBListData': eval(val)}}, getWBData = wxArr.data.staticWBListData;
            indexWBListWrapDom.html('');
            var html = renderAccountDataFun(1, getWBData);
            indexWBListWrapDom.append(html);
            itemMouseHoverFun();
        } else if(name == '_get_sv_list') {
            var wxArr = {'data':{'staticSVListData': eval(val)}}, getSVData = wxArr.data.staticSVListData;
            indexSVListWrapDom.html('');
            var html = renderAccountDataFun(2, getSVData);
            indexSVListWrapDom.append(html);
            itemMouseHoverFun();
        } else if(name == '_get_agency_list') {
            var agencyArr = {'data':{'staticAgencyListData':eval(val)}}, getAgencyData = agencyArr.data.staticAgencyListData, htmlG = '';
            indexAgencyListWrapDom.html('');
            for(var g = 0, gLen = getAgencyData.length; g < gLen; g++){
                var sucDataG = getAgencyData[g], htmlGSub = '';
                for(var s = 0, sLen = sucDataG.length; s < sLen; s++){
                    var sucSubDataG = sucDataG[s], hideItem = '',
                        readCount = sucSubDataG.avgReadCount, fansNum = sucSubDataG.fans,
                        detailUrl = domain+'/segmentAccount/segment_account.html?keyword='+sucSubDataG.name;
                    fansNum ? hideItem = '' :  hideItem = 'hide';
