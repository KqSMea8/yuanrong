                    +'<a href="'+detailUrl+'" target="_blank">'
                        +'<div class="type-sign">'+sucData.yrCategory+'</div>'
                        +'<h4>'+sucData.title+'</h4>'
                        +'<div class="item-con-wrap">'+sucData.content+'</div>'
                        +'<div class="author-info-wrap fixedClear">'
